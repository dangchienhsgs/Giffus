<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dangchienhsgs.giffus">

    <permission
        android:name="com.dangchienhsgs.giffus.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.dangchienhsgs.giffus.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/present"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.dangchienhsgs.giffus.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dangchienhsgs.giffus.HomeActivity"
            android:label="@string/title_activity_home"
            android:uiOptions="splitActionBarWhenNarrow">
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>

        <receiver
            android:name="com.dangchienhsgs.giffus.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.dangchienhsgs.giffus" />
            </intent-filter>
        </receiver>

        <provider
            android:name="com.dangchienhsgs.giffus.provider.DataProvider"
            android:authorities="com.dangchienhsgs.giffus.provider"
            android:exported="false" />

        <service android:name="com.dangchienhsgs.giffus.GcmIntentService" />

        <activity
            android:name="com.dangchienhsgs.giffus.RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:name="com.dangchienhsgs.giffus.FriendRequestsActivity"
            android:label="@string/title_activity_friend_requests" />
        <activity
            android:name="com.dangchienhsgs.giffus.NotifyActivity"
            android:label="@string/title_activity_notify" />
        <activity
            android:name="com.dangchienhsgs.giffus.SearchFriendsActivity"
            android:label="@string/title_activity_search_friends" />
        <activity
            android:name="com.dangchienhsgs.giffus.SyncFriendsActivity"
            android:label="@string/title_activity_sync_friends" />
        <activity
            android:name="com.dangchienhsgs.giffus.SearchByNameActivity"
            android:label="@string/title_activity_search_by_name" />
        <activity
            android:name="com.dangchienhsgs.giffus.postcard.CreateCoverActivity"
            android:label="@string/title_activity_create_cover" />
        <activity
            android:name="com.dangchienhsgs.giffus.postcard.CreateInnerActivity"
            android:label="@string/title_activity_create_inner" />
        <activity
            android:name="com.dangchienhsgs.giffus.postcard.PreviewCoverActivity"
            android:label="@string/title_activity_cover_preview" />
        <activity
            android:name="com.dangchienhsgs.giffus.postcard.ChooseFriendActivity"
            android:label="@string/title_activity_choose_friend"
            android:launchMode="singleTop"
            android:theme="@style/Theme.AppCompat.Light">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"
                android:value="com.dangchienhsgs.giffus.postcard.ChooseFriendActivity" />
        </activity>
        <activity
            android:name="com.dangchienhsgs.giffus.postcard.PreviewInnerActivity"
            android:label="@string/title_activity_preview_inner" />
        <activity
            android:name="com.dangchienhsgs.giffus.postcard.TimePickerActivity"
            android:label="@string/title_activity_time_picker" />
        <activity
            android:name="com.dangchienhsgs.giffus.map.AddLocationActivity"
            android:label="@string/title_activity_add_location" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyD_vww7VAyDI5IPjPTNFJE3cWCmiv98vOs" />
    </application>

</manifest>
