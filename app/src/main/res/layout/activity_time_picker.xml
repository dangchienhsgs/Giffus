<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dangchienhsgs.giffus.postcard.TimePickerActivity">

    <TextView
        android:id="@+id/text_title_choose_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose time: " />


    <EditText
        android:id="@+id/edit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/text_title_choose_time"
        android:editable="false" />

    <TextView
        android:id="@+id/text_title_choose_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_time"
        android:text="Choose date: " />

    <EditText
        android:id="@+id/edit_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/edit_time"
        android:layout_toRightOf="@+id/text_title_choose_date"
        android:editable="false" />

    <TextView
        android:id="@+id/text_secret_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_date"
        android:text="Secret sender ?" />

    <CheckBox
        android:id="@+id/check_box_secret_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_date"
        android:layout_toRightOf="@+id/text_secret_sender" />

</RelativeLayout>
