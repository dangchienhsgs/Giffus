<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyActivity">

    <EditText
        android:id="@+id/edit_username"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="42dp"
        android:hint="Username"
        android:inputType="text" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_below="@+id/edit_username"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button_signIn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_username"
        android:layout_alignStart="@+id/edit_username"
        android:layout_alignTop="@+id/button_register"
        android:onClick="onClickSignIn"
        android:text="Sign In" />

    <Button
        android:id="@+id/button_register"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_username"
        android:layout_alignRight="@+id/edit_username"
        android:layout_below="@+id/edit_username"
        android:layout_gravity="right"
        android:layout_marginTop="85dp"
        android:onClick="onClickRegister"
        android:text="Register " />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_register"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/light_gray"
        android:text="@string/text_forget_password"
        android:id="@+id/textView2"
        android:layout_below="@+id/button_signIn"
        android:layout_alignLeft="@+id/button_signIn"
        android:layout_alignStart="@+id/button_signIn" />

\
</RelativeLayout>
