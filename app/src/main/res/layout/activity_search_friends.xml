<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dangchienhsgs.giffus.SearchFriendsActivity">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:padding="6dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/icon_by_phone"
            android:src="@drawable/ic_launcher"
            android:layout_width="60dip"
            android:onClick="onClickSyncContacts"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dip"
            android:scaleType="fitStart" />

        <TextView
            android:id="@+id/text_title_by_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sync your contacts"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toRightOf="@id/icon_by_phone"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/text_descriptions_by_phone"
            android:layout_width="fill_parent"
            android:layout_height="26dip"
            android:text="Sync all the friends in your contacts list"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/icon_by_phone"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:gravity="center_vertical" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:padding="6dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/icon_by_name"
            android:onClick="onClickSearchContactsByName"
            android:src="@drawable/ic_launcher"
            android:layout_width="60dip"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dip"
            android:scaleType="fitStart" />

        <TextView
            android:id="@+id/text_title_by_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Search friends by name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toRightOf="@id/icon_by_name"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/text_descriptions_by_name"
            android:layout_width="fill_parent"
            android:layout_height="26dip"
            android:text="Input an ordinary name and we will find them"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/icon_by_name"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:gravity="center_vertical" />

    </RelativeLayout>




</LinearLayout>
