<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_postcard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/danbo1"
    tools:context="com.dangchienhsgs.giffus.postcard.CreateCoverActivity">

    <EditText
        android:id="@+id/edit_large"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Happy Birthday !"
        android:textColor="@android:color/background_light"
        android:textSize="60dp" />

    <EditText
        android:id="@+id/edit_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_large"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Love you more than I can say !"
        android:textColor="@android:color/background_light" />


</RelativeLayout>
