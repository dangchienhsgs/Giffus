<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_baby" />

    <TextView

        android:id="@+id/text_title_fullname"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/avatar"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="Full name" />

    <TextView

        android:id="@+id/text_fullname"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/avatar"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/text_title_fullname"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/text_title_username"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/text_fullname"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text="Username" />

    <TextView
        android:id="@+id/text_username"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_fullname"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/text_title_fullname"
        android:gravity="center_vertical" />


    <TextView
        android:id="@+id/text_title_mobile_phone"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/text_username"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text="Phone number" />

    <TextView
        android:id="@+id/text_mobile_phone"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_username"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/text_title_mobile_phone"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/text_title_email"
        android:layout_width="100dp"
        android:layout_height="40dp"

        android:layout_below="@+id/text_mobile_phone"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text="Email" />

    <TextView
        android:id="@+id/text_email"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_mobile_phone"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/text_title_email"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/image_birthday"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_email"
        android:src="@drawable/birthday" />


    <TextView
        android:id="@+id/text_birth"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/text_email"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/image_birthday"
        android:gravity="center_vertical"
        android:text="19/11/1994" />

</RelativeLayout>
